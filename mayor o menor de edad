    int edad;

    cout << "Ingresa la edad de Taily: ";
    cin >> edad;

    if (edad >= 18) {
        cout << "Taily es mayor de edad" << endl;
    } else {
        cout << "Taily es menor de edad" << endl;
    }

    return 0;
}
