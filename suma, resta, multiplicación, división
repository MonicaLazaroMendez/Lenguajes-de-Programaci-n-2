#include <iostream>
using namespace std;

int main() {
    float num1, num2, resta;

    cout << "Escribe el primer numero: ";
    cin >> num1;

    cout << "Escribe el segundo numero: ";
    cin >> num2;

    resta = num1 - num2;

    cout << "La resta es: " << resta << endl;

    return 0;
}


#include <iostream>
using namespace std;

int main() {
    float num1, num2, suma;

    cout << "Escribe el primer numero: ";
    cin >> num1;

    cout << "Escribe el segundo numero: ";
    cin >> num2;

    suma = num1 + num2;

    cout << "La suma es: " << suma << endl;

    return 0;
}



#include <iostream>
using namespace std;

int main() {
    float num1, num2, division;

    cout << "Escribe el primer numero: ";
    cin >> num1;

    cout << "Escribe el segundo numero: ";
    cin >> num2;

    if (num2 != 0) {
        division = num1 / num2;
        cout << "La division es: " << division << endl;
    } else {
        cout << "No es posible dividir entre cero." << endl;
    }

    return 0;
}




#include <iostream>
using namespace std;

int main() {
    float num1, num2, multiplicacion;

    cout << "Escribe el primer numero: ";
    cin >> num1;

    cout << "Escribe el segundo numero: ";
    cin >> num2;

    multiplicacion = num1 * num2;

    cout << "La multiplicacion es: " << multiplicacion << endl;

    return 0;
}
